{
  "name": "code-principles",
  "version": "1.0.0",
  "type": "module",
  "description": "Code principles examples: OOP, CLEAN_CODE, and SOLID",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx",
    "dev": "tsx watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "oop:abstraction": "tsx src/OOP/abstraction/database-connection.ts",
    "oop:encapsulation": "tsx src/OOP/encapsulation/bank-account.ts",
    "oop:inheritance": "tsx src/OOP/inheritance/inheritance.ts",
    "oop:polymorphism:notifiable": "tsx src/OOP/polymorphism/notifiable.ts",
    "oop:polymorphism:payment-method": "tsx src/OOP/polymorphism/payment-method.ts",
    "oop:composition": "tsx src/OOP/composition/composition-vs-inheritance.ts",
    "oop:interfaces": "tsx src/OOP/interfaces/interfaces-vs-abstract.ts",
    "oop:static": "tsx src/OOP/static/static-members.ts",
    "oop:getters-setters": "tsx src/OOP/getters-setters/accessors.ts",
    "solid:srp": "npm run solid:srp:bad && echo '\n---\n' && npm run solid:srp:good",
    "solid:srp:bad": "tsx src/SOLID/S/example/bad-example.ts",
    "solid:srp:good": "tsx src/SOLID/S/example/good-example.ts",
    "solid:ocp": "npm run solid:ocp:bad && echo '\n---\n' && npm run solid:ocp:good",
    "solid:ocp:bad": "tsx src/SOLID/O/example/bad-example.ts",
    "solid:ocp:good": "tsx src/SOLID/O/example/good-example.ts",
    "solid:lsp": "npm run solid:lsp:bad && echo '\n---\n' && npm run solid:lsp:good",
    "solid:lsp:bad": "tsx src/SOLID/L/example/bad-example.ts",
    "solid:lsp:good": "tsx src/SOLID/L/example/good-example.ts"
  },
  "keywords": [
    "OOP",
    "SOLID",
    "Clean Code"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
